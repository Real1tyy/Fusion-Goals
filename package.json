{
	"name": "fusion-goals",
	"version": "1.0.1",
	"description": "A hierarchical goal management plugin for Obsidian that visualizes goals, projects, and tasks in an interactive relationship graph.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"check": "prettier --check . && eslint .",
		"check:fix": "prettier --write . && eslint --fix ."
	},
	"keywords": [
		"obsidian",
		"goals",
		"projects",
		"tasks",
		"plugin",
		"visualization",
		"hierarchy"
	],
	"funding": {
		"type": "custom",
		"url": "https://matejvavroproductivity.com/support/"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"pnpm": {
		"overrides": {
			"obsidian": "1.10.0"
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/cytoscape-dagre": "^2.3.4",
		"@types/node": "^24.10.9",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.11",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"fast-check": "^4.5.3",
		"globals": "^15.14.0",
		"jsdom": "^27.4.0",
		"obsidian": "1.10.0",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.20.0",
		"vitest": "^3.2.4",
		"@types/luxon": "^3.7.1"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins": "file:./shared",
		"colord": "^2.9.3",
		"cytoscape": "^3.33.1",
		"cytoscape-dagre": "^2.5.0",
		"luxon": "^3.7.2",
		"rxjs": "^7.8.2",
		"yaml": "^2.8.2",
		"zod": "^4.3.5"
	}
}
